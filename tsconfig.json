{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "declaration": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@environments/*": ["environments/*"]
    }
  }
}
